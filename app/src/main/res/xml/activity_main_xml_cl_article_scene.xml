<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/article_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="159dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/tiffanyBlue_100" />
        </Constraint>
        <Constraint
            android:id="@+id/article_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="176dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/pearl_aqua" />
        </Constraint>
        <Constraint
            android:id="@+id/article_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="193dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/pearl_aqua" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/main_article"
            android:layout_width="330dp"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            motion:layout_constraintStart_toEndOf="@+id/main_article"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_marginStart="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:id="@+id/main_article_2"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/article_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="159dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/pearl_aqua" />
        </Constraint>
        <Constraint
            android:id="@+id/article_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="176dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/tiffanyBlue_100" />
        </Constraint>
        <Constraint
            android:id="@+id/article_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/main_article"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="193dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/pearl_aqua" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/menu" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
    <ConstraintSet
        android:id="@+id/menu"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:id="@+id/main_article_2"
            android:layout_width="330dp"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            motion:layout_constraintEnd_toEndOf="@+id/main_article" />
        <Constraint
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="330dp"
            motion:layout_constraintStart_toEndOf="@+id/main_article"
            android:id="@+id/main_article_3"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>
</MotionScene>