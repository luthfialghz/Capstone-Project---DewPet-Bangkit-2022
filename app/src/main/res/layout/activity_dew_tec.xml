<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.DewTecActivity">

    <ImageView
        android:id="@+id/iv_back_diagnose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tv_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_bold"
        android:text="DewTec"
        android:textColor="@color/tiffanyBlue_100"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_back_diagnose"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_diagnose"
        android:layout_width="316dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_diagnose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_title">

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Pilih beberapa gejala dibawah ini"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_diagnose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_diagnose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:text="Diagnosa"
            android:textColor="@color/tiffanyBlue_100"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_indicator_total_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Gejala yang dipilih :"
        android:textColor="@color/tiffanyBlue_100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cl_diagnose"
        app:layout_constraintStart_toStartOf="@+id/cl_diagnose"
        app:layout_constraintTop_toBottomOf="@+id/cl_diagnose" />

    <TextView
        android:id="@+id/tv_indicator_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kamu belum memilih gejala"
        android:textColor="@color/cadetBlue_90"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_indicator_total_title"
        app:layout_constraintStart_toStartOf="@+id/tv_indicator_total_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_indicator_total_title" />

    <RadioGroup
        android:id="@+id/rg_animal_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_indicator_total">

        <RadioButton
            android:id="@+id/rb_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kucing" />

        <RadioButton
            android:id="@+id/rb_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="anjing" />

        <RadioButton
            android:id="@+id/rb_rabbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kelinci" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_animal_indicator"
        tools:listitem="@layout/row_indicator">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>